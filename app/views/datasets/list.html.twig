{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">

            <h1>Datasets</h1>

            {%  if datasets is empty %}
                <p>Er zijn (nog) geen datasets.</p>
            {% else  %}
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>View</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for set in datasets %}
                        <tr>
                            <td>{{ set.id }}</td>
                            <td>{{ set.title }}</td>
                            <td>
                                <a href="{{ path('dataset-describe', {'id': set.id }) }}" class="btn btn-xs btn-success" title="Bekijk de resultaten"><i class="fa fa-search-plus"></i> </a>
                            </td>
                            <td>
                                <a href="{{ path('dataset-delete', { 'id': set.id }) }}" title="Verwijder de gehele dataset" class="btn btn-xs btn-danger delete"><i class="fa fa-trash"></i> </a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        </div>
    </div>

<script type="text/javascript">
    jQuery(function () {

        $('.delete').on('click', function(e) {
            if(confirm('Let op! Alles wordt verwijderd...')){
                // The user pressed OK
            } else {
                e.preventDefault();
            }
        });

    });
</script>

{% endblock %}