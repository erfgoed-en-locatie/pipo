{% extends "layout.html.twig" %}

{% block content %}

    <div id="resultnav">
        {% set cur = 'csvs' %}
        {% include 'datasets/tabnavs.twig' %}
    </div>

    <div class="row">
        <div class="col-md-8">

            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Use</th>
                    <th>Name</th>
                    <th>Uploaded on</th>
                    <th>Delete?</th>
                </tr>
                </thead>

                <tbody>
                {% for csv in csvs %}
                    <tr id="row_{{ csv.id }}">
                        <td class="choose">
                            {% if csv.use_csv_id == csv.id %}
                                <a href="{{ path('api-choose-csv', { 'id': csv.id, datasetId: set.id }) }}"
                                   title="Use this csv!" class="btn btn-xs btn-primary select-csv"><i class="fa fa-check-square"></i></a>
                            {% else %}
                            <a href="{{ path('api-choose-csv', { 'id': csv.id, datasetId: set.id }) }}"
                               title="Use this csv!" class="btn btn-xs btn-primary select-csv"><i class="fa fa-square-o"></i></a>
                            {% endif %}
                        </td>
                        <td>{{ csv.filename }}</td>
                        <td>{{ csv.created_on }}</td>
                        <td>
                            <a href="{{ path('api-delete-csv', { 'id': csv.id }) }}" title="Delete this csv"
                               class="btn btn-xs btn-danger delete-csv"><i class="fa fa-trash"></i> </a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>

        </div>


        <div class="col-md-4">

            <h1>Csv files dataset '{{ set.title }}'</h1>

            <ul>
                <li>Remember to provide a field with <strong>permanent id's</strong> for your records!</li>
                <li>Make sure to give <strong>column names</strong> in the first row</li>
                <li>Please use comma's for separators</li>
                <li>It's ok to upload more than one csv and keep a bit of history</li>
                <li>Check 'use' on the csv you want to use</li>
            </ul>


            {% form_theme form 'bootstrap_3_layout.html.twig' %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Upload new csv</button>
            </div>
            {{ form_end(form) }}

        </div>
    </div>


    <script type="text/javascript">
        jQuery(function () {

            $('.delete-csv').on('click', function(e) {
                e.preventDefault();
                var uri = $(this).attr('href');
                askAPI('GET', uri, null, function(json){
                    var tr = '#row_'+json.id;
                    $(tr).remove();
                    alertMessage('The csv was deleted');
                });
            });

            $('.select-csv').on('click', function(e) {
                e.preventDefault();
                var uri = $(this).attr('href');
                askAPI('GET', uri, null, function(json) {
                    var tr = '#row_'+json.id;
                    $('table .choose').find('i').attr('class','fa fa-square-o');
                    $(tr+' .choose').find('i').attr('class','fa fa-check-square');
                    alertMessage('The csv was selected');
                });
            });

        });
    </script>

{% endblock %}