{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">

            <div id="resultnav">
                {% set cur = 'csvs' %}
                {% include 'datasets/tabnavs.twig' %}
            </div>

            <h1>Csv files dataset '{{ set.name }}'</h1>

            <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Use</th>
                <th>Name</th>
                <th>Uploaded on</th>
                <th>Delete?</th>
            </tr>
            </thead>
            <tbody>
            {% for csv in csvs %}
                <tr>
                    <td><input type="radio" name="csvselector" value="{{ csv.id }}" class="selectCsv"></td>
                    <td>{{ csv.filename }}</td>
                    <td>{{ csv.uploaded }}</td>
                    <td>
                        <a href="{{ path('dataset-delete', { 'id': set.id }) }}" title="Verwijder de gehele dataset" class="btn btn-xs btn-danger delete"><i class="fa fa-trash"></i> </a>
                    </td>
                </tr>

            {% endfor %}

        </div>
    </div>



{% endblock %}